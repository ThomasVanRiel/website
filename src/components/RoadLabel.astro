---
const { label, number } = Astro.props;

// Set colors based on road type
let bg_color: string;
let fg_color: string;
let label_size: string = '';
let rounded_class: string = 'rounded';

switch (label) {
  case 'N': // National roads - blue
    bg_color = "rgb(50 100 200)";
    fg_color = "white";
    label_size = 'text-xs';
    break;
  case 'A': // Autoroutes - white
    bg_color = "white";
    fg_color = "black";
    break;
  case 'E': // European routes - green
    bg_color = "rgb(22 163 74)";
    fg_color = "white";
    break;
  case 'R': // Ring roads - white
  default:
    bg_color = "white";
    fg_color = "black";
    rounded_class = 'rounded-sm';
    break;
}

---


<span class={`mx-0.5 px-1 py-0.5 ${rounded_class} inline-flex items-baseline align-baseline leading-none`} style={`background-color: ${bg_color}; color: ${fg_color}; box-shadow: inset 0 0 0 1px ${fg_color}, 0 0 0 1px ${bg_color};`}><span class={`${label_size} px-0 py-0 mx-0 my-0`}>{label}</span><span>{number}</span></span>