  // Function to display ingredients list
  function displayIngredients(ingredients: Ingredient[]) {
    // Remove previous ingredient text
    svg.selectAll(".ingredient-text").remove();
    
    if (ingredients.length === 0) {
      // Update border to minimal height when no ingredients
      svg.select(".ingredients-border")
        .attr("height", 60);
      return;
    }
    
    // Sort ingredients alphabetically
    const sortedIngredients = [...ingredients].sort((a, b) => 
      a.name.localeCompare(b.name)
    );
    
    // Display in bottom-left quadrant
    const startY = topRowHeight + 40;
    const lineHeight = 24;
    const nameX = 20;
    const amountX = leftColumnWidth - 20; // Right-aligned position
    
    sortedIngredients.forEach((ing, index) => {
      const yPos = startY + index * lineHeight;
      
      // Ingredient name (left-aligned)
      svg.append("text")
        .attr("class", "ingredient-text")
        .attr("x", nameX)
        .attr("y", yPos)
        .attr("font-size", `${ingredientListFontSize}px`)
        .attr("font-family", "xkcd Script, cursive")
        .attr("fill", "var(--text-color)")
        .text(ing.name);
      
      // Amount (right-aligned)
      if (ing.amount) {
        svg.append("text")
          .attr("class", "ingredient-text")
          .attr("x", amountX)
          .attr("y", yPos)
          .attr("text-anchor", "end")
          .attr("font-size", `${ingredientListFontSize}px`)
          .attr("font-family", "xkcd Script, cursive")
          .attr("fill", "var(--text-muted)")
          .text(`(${ing.amount})`);
      }
    });
    
    // Update border height to fit the ingredient list
    const listHeight = sortedIngredients.length * lineHeight + 60; // 60 = startY offset + bottom padding
    svg.select(".ingredients-border")
      .attr("height", Math.min(listHeight, quadrantHeight - 2 * quadrantPadding));
  }
  
  // Function to display instructions in top-right quadrant
  function displayInstructions() {
