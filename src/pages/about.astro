---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

import "../styles/global.css";

const pageTitle = "About Thomas Van Riel";
const identity = {
  firstName: "Thomas",
  country: "Belgium",
  occupation: "Mechanical Engineer",
  favoriteDinosaur: "Stegosaur",
};

const skills = ["Mechanical Design", "Manufacturing"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
    <p>Some facts about me:</p>
    <ul>
      <li>First name: {identity.firstName}</li>
      <li>Country: {identity.country}</li>
      <li>Occupation: {identity.occupation}</li>
      <li>Favorite dinosaur: {identity.favoriteDinosaur}</li>
    </ul>
    <p>My skills:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy!</p>}
    {finished && <p>I am finished!</p>}
    {
      goal === 3 ? (
        <p>My goal is to finish in 3 days.</p>
      ) : (
        <p>My goal is not 3 days.</p>
      )
    }
</BaseLayout>